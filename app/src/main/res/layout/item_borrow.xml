<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_borrower_name"
            android:text="Borrower:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/text_mobile_no"
            android:text="Mobile:"
            android:textSize="14sp"             android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/text_borrow_date"
            android:text="Date:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/text_books"
            android:text="Books:"
            android:textSize="14sp"
            android:textColor="#555555"            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
